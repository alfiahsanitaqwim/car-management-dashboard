// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model CarType {
  id        Int      @id @default(autoincrement())
  name      String
  cars      Car[]
  
  @@map("car_types")
}

model CarBrand {
  id        Int      @id @default(autoincrement())
  name      String
  cars      Car[]
  
  @@map("car_brands")
}

model Car {
  id            Int       @id @default(autoincrement())
  car_name      String
  id_car_type   Int
  id_car_brand  Int
  availabiliy   Boolean
  capacity      Int
  image_url     String
  price         Int
  desc          String
  car_type      CarType   @relation(fields: [id_car_type], references: [id])
  car_brand     CarBrand  @relation(fields: [id_car_brand], references: [id])
  customers     Customer[]
  
  @@map("cars")
}

model Customer {
  id_customer   Int       @id @default(autoincrement())
  id_car        Int
  name          String
  email         String    @unique
  phone         Int
  photo         String
  car           Car       @relation(fields: [id_car], references: [id])
  
  @@map("customers")
}